<h1><%= @artist.name %></h1>

<div class="row1_artwork no-gutters border_top">
    <% @artist.artworks.each do |artwork| %>
      <div class="col-12 col-md-6 border_right border_bottom change_backcolor">
          <% if artwork.title.length > 20 %>
          <div> <%= link_to artwork.title[0..18] + "...", artwork, class: "title change_textcolor" %> </div>
          <% else %>
          <div> <%= link_to artwork.title, artwork, class: "title change_textcolor" %> </div>
          <% end %> 
          <% if artwork.exhib %> 
              <div> <%= link_to artwork.exhib, exhib_path(artwork.exhib), class: "exhib change_textcolor" %> </div> 
          <%end %>

          <%if artwork.year %>
                <p><%= artwork.year %>, <%= artwork.description %></p>
            <% else %>
                <p> <%= artwork.description %> </p>
            <% end %>
      </div>


      <div class="col-12 col-md-6 border_right border_bottom">
          <%= link_to artwork do %>
              <div class="image" style="background-image:url(<%= artwork.image %>)"></div>
          <% end %>
      </div>

    <% end %>
</div>

