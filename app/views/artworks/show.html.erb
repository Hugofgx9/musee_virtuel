<header>
    <nav class="main-nav">
      <ul>
        <li class="border_black">
          <%= link_to "Expositions", exhibs_path, class: "change_textcolor" %>
        </li>
        <li class="border_black">
          <%= link_to "Le Musée du Rêve", artworks_path, class: "change_textcolor" %>
        </li>
        <li class="border_black">
          <%= link_to "Artistes", artists_path, class: "change_textcolor" %>
        </li>
      </ul>
    </nav>
  </div>
</header>




<body class="background font">

<div class="row1_show no-gutters border_top">
      <div class="col-12 col-lg-6 border_right border_bottom">
          <h5 class="title"> <%= @artwork.title %> </h5> 
          <% if @artwork.artist %> 
              <div> <%= link_to @artwork.artist, artist_path(@artwork.artist), class: "artist" %> </div> 
          <% end %>
          <% if @artwork.exhib %> 
              <div> <%= link_to @artwork.exhib, exhib_path(@artwork.exhib), class: "exhib" %> </div> 
          <%end %>
          <div> <%= @artwork.year %>, <%= @artwork.description %> </div>
      </div>
      <% if @artwork.image %> 
        <div class="col-12 col-lg-6 border_right border_bottom">
          <img src="<%= @artwork.image %>" height=300px>
        </div>
      <% end %>
</div>
