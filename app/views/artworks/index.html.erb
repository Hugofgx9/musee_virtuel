<body class="background font">

<h1>Artworks</h1>

<div class="row1 no-gutters border_black">
    <% @artworks.each do |artwork| %>
      <div class="col-12 col-lg-3 border_right">
          <h3><%= artwork.autor %></h3>
          <h5><%= artwork.title %></h5>
          <p><%= artwork.year %></p>
          <p><%= artwork.description %></p>
      </div>
      <div class="col-12 col-lg-3 border_right">
          <img src="<%= artwork.image %>" height=196px>
      </div>
    <% end %>
</div>


