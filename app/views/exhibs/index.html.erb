<h1>Expositions</h1>

<div class="row1_exhib no-gutters border_top">
    <% @exhibs.each do |exhib| %>
      <%= link_to exhib do %>
        <div class="col-12 col-lg-3 col-md-6 border_right border_bottom change_backcolor">
            <h3><%= link_to exhib.title, exhib, class: "change_textcolor" %></h3>
            <p> <%= exhib.description %></p>
        </div>
      <% end %>
    <% end %>
</div>
