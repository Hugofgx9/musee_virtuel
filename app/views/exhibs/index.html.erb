<p id="notice"><%= notice %></p>

<h1>Exhibs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exhibs.each do |exhib| %>
      <tr>
        <td><%= exhib.title %></td>
        <td><%= exhib.description %></td>
        <td><%= link_to 'Show', exhib %></td>
        <td><%= link_to 'Edit', edit_exhib_path(exhib) %></td>
        <td><%= link_to 'Destroy', exhib, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Exhib', new_exhib_path %>
