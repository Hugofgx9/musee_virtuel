<header>
    <nav class="main-nav">
      <ul>
        <li class="border_black">
          <%= link_to "Expositions", exhibs_path, class: "change_textcolor" %>
        </li>
        <li class="border_black">
          <%= link_to "Le Musée du Rêve", artworks_path, class: "change_textcolor" %>
        </li>
        <li class="border_black">
          <%= link_to "Artistes", artists_path, class: "change_textcolor" %>
        </li>
      </ul>
    </nav>
  </div>
</header>

<body class="background font">

<h1 class= "border_top"><%= @exhib.title %></h1>
<div class="border_top"><%= @exhib.description %><div>

<div class="row1_artwork no-gutters border_top">
    <% @exhib.artworks.each do |artwork| %>
      <div class="col-12 col-lg-3 border_right border_bottom change_backcolor">
          <% if artwork.title.length > 20 %>
          <h5> <%= link_to artwork.title[0..18] + "...", artwork, class: "title change_textcolor" %> </h5>
          <% else %>
          <h5> <%= link_to artwork.title, artwork, class: "title change_textcolor" %> </h5>
          <% end %> 
          <% if artwork.artist %>
              <div ><%= link_to artwork.artist, artist_path(artwork.artist), class: "artist change_textcolor" %> </div> 
          <%end %>
          <p><%= artwork.year %>, <%= artwork.description %></p>
      </div>

      <div class="col-12 col-lg-3 border_right border_bottom">
        <%= link_to artwork do %>
            <div class="image" style="background-image:url(<%= artwork.image %>)"></div>
        <% end %>
      </div>

    <% end %>
</div>